# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/fastapi

# CORS settings
BACKEND_CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000"]

# Email settings
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
